{
  "name": "functions",
  "engines": {
    "node": "12"
  },
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "serve": "yarn build && firebase emulators:start --only functions",
    "shell": "yarn build && firebase functions:shell",
    "start": "yarn shell",
    "firebase:functions": "yarn build && dotenv-load firebase emulators:start --only functions",
    "firebase:shell": "firebase functions:shell",
    "deploy": "run-s build deploy:*",
    "deploy:build": "cd .. && yarn env:build",
    "deploy:envs": "firebase functions:config:unset env && firebase functions:config:set env=\"$(cat ../env.json)\"",
    "deploy:functions": "dotenv-load firebase deploy --only functions --token $FIREBASE_TOKEN --project $FIREBASE_PROJECT",
    "logs": "firebase functions:log"
  },
  "eslintConfig": {
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx",
          "*.d.ts"
        ],
        "parserOptions": {
          "project": "./tsconfig.json"
        }
      }
    ]
  },
  "dependencies": {
    "firebase-admin": "^8.10.0",
    "firebase-functions": "^3.6.1",
    "graphql-request": "^3.1.0",
    "isomorphic-fetch": "^2.2.1"
  },
  "devDependencies": {
    "@types/node": "^14.10.2",
    "dotenv-load": "^2.0.0",
    "firebase-functions-test": "^0.2.0",
    "firebase-tools": "^8.10.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^3.8.0"
  },
  "private": true
}
